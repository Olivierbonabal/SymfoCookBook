{% extends 'base.html.twig' %}

{% block title %}Recette de la Communauté
{% endblock %}

{% block body %}
	<div class="container my-3">

		{% if not recipes.items is same as ([]) %}

			<h1>Recettes en partages</h1>

			<div class="d-flex justify-content-center flex-wrap">
				{% for recipe in recipes %}

					<div class="card text-white bg-secondary mb-3" style="max-width: 20rem;">
						<div class="card-header">Recette n°{{ recipe.id }}</div>
						<div class="card-body">
							<h4 class="card-title">
								<a href="{{ path('recipe.show', {id: recipe.id} )}}">{{ recipe.name }}</a>
							</h4>
							<p class="card-text">{{ recipe.description|slice(0, 100) ~ '...' }}</p>
						</div>
					</div>

				{% endfor %}
			</div>

		{% else %}
			<p class="text-danger">Il n'y a pas de recettes.</p>
		{% endif %}

	</div>
{% endblock %}
