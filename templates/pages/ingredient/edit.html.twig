{% extends "base.html.twig" %}

{% block title %}Modifie ton ingrédient
{% endblock %}

{% block body %}

	<div class="container">

		<h1 class="my-3">
			Modification d'un ingrédient
		</h1>

		<form name="ingredient" method="post">

			{% for message in app.flashes('success') %}
				<div class="alert alert-dismissible alert-success mt-4">
					{{ message }}
				</div>
			{% endfor %}

			{{ form_start(form) }}
			<div class="form-error">
				{{ form_errors(form) }}
			</div>

			<div class="form-group">
				{{ form_label(form.name) }}
				{{ form_widget(form.name) }}
				<div class="form-error">
					{{ form_errors(form.name) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.price) }}
				{{ form_widget(form.price) }}
				<div class="form-error">
					{{ form_errors(form.price) }}
				</div>
			</div>

			{{ form_row(form._token) }}

			<button type="submit" id="ingredient_submit" name="ingredient[submit]" class="btn btn-primary mt-3">Modifier mon ingrédient</button>

		</div>
	</form>
</div>
{% endblock %}
